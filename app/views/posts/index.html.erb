<h1 class="center">Posts</h1>
<div class="center"><%= button_to "Create new post", new_post_path, class: "btn btn-outline-dark", method: :get %></div>
<br>
<table class="table table-hover table-border border rounded rounded-3 border-dark">
  <thead class="table-dark">
  <tr>
    <th scope="col">#</th>
    <th scope="col">Title</th>
    <th scope="col">Date</th>
    <th scope="col">Body</th>
    <th scope="col">Author</th>
    <th scope="col">Edit</th>
    <th scope="col">Show</th>
  </tr>
  </thead>
  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.id %></td>
      <td><%= post.title %></td>
      <td><%= post.date %></td>
      <td><%= post.body.truncate_words(5, omission: '...') %></td>
      <td><%= post.user.nickname %></td>
      <td><%= button_to "", edit_post_path(post), class: "btn btn-outline-dark", method: :get %></td>
      <td><%= button_to "", post_path(post), class: "btn btn-outline-dark", method: :get %></td>
    </tr>
  <% end %>
  </tbody>
</table>
