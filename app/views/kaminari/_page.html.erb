<% if page.current? %>
  <li class='page-item'>
    <%= content_tag :a, page, data: { remote: remote }, rel: page.rel, class:"page-link bg-dark text-white active-link h1 no-hover" %>
  </li>
<% else %>
  <li class="page-item">
    <%= link_to page, url, remote: remote, rel: page.rel, class:"page-link bg-dark text-white h1" %>
  </li>
<% end %>
