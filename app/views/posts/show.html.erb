<%= render "shared/link_back" %>
<br>
<div class="card text-center">
  <div class="card-header">
    Post â„–<%= @post.id %>
  </div>
  <div class="card-body">
    <h5 class="card-title">Title: <%= @post.title %></h5>
    <p class="card-text">Body: <%= @post.body %>></p>
    <div class="button-holder">
      <%= button_to "Edit", edit_post_path(@post), class: "btn btn-outline-dark", method: :get %>
      <%= button_to "Destroy", post_path(@post), class: "btn btn-outline-dark", method: :delete %>
    </div>
  </div>
  <div class="card-footer text-muted">
    <%= @post.date %>
  </div>
</div>
